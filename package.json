{
  "name": "@relaxer/cli",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@9.14.4",
  "description": "Terminal CLI for enjoying my spare time.",
  "author": "ShenQingchuan <shen_qing_chuan@163.com>",
  "license": "MIT",
  "keywords": [
    "Command line application"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "bin": {
    "relax": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "run": "esno src/index.ts",
    "build": "unbuild",
    "watch": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "debug": "^4.3.7",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.1.4",
    "ora": "^8.1.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@antfu/ni": "^0.23.1",
    "@antfu/utils": "^0.7.10",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.17.9",
    "bumpp": "^9.8.1",
    "eslint": "^9.16.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.14.4",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "unbuild": "^2.0.0",
    "vite": "^6.0.2",
    "vitest": "^2.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
